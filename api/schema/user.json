{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "user.json",
    "type": "object",
    "title": "User",
    "description": "The user schema is the schema that comprises the contents of a user.",
    "definitions": {
        "id": {
            "type": "integer",
            "title": "The Id Schema",
            "description": "An index to access the user.",
            "example": 123
        },
        "name": {
            "type": "string",
            "title": "The Name Schema",
            "description": "the name given to a user.",
            "examples": [
                "John Doe",
                "Jane Doe"
            ]
        },
        "email": {
            "type": "string",
            "format": "email",
            "title": "The Email Schema",
            "description": "The means of contact for a given user.",
            "example": "test.user@example.com"
        }
    },
    "required": [
        "id",
        "name",
        "email"
    ],
    "properties": {
        "id": {
            "$ref": "#/definitions/id"
        },
        "name": {
            "$ref": "#/definitions/name"
        },
        "email": {
            "$ref": "#/definitions/email"
        }
    }
}