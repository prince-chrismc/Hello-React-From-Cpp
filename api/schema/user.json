{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "user.json",
    "type": "object",
    "title": "The User Schema",
    "description": "The user schema is the schema that comprises the contents of a user.",
    "required": [
        "id",
        "name",
        "email"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The Id Schema",
            "description": "An index to access the user.",
            "examples": [
                123
            ]
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The Name Schema",
            "description": "the name given to a user.",
            "examples": [
                "John Doe",
              	"Jane Doe"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The Email Schema",
            "description": "The means of contact for a given user.",
            "examples": [
                "test.user@example.com"
            ]
        }
    }
}
